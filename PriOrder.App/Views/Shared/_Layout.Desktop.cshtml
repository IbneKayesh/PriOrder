<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, shrink-to-fit=no">

    <meta name="description" content="Primary Order Collection">
    <meta name="keywords" content="RFL, DO, Web DO, Runner, RFL DO, RFL WebDO, RFL Web DO, Order, Dealership, Web Order, PRAN, PRAN-RFL Group" />
    <meta name=”theme-color” content=”#0d6efd>
    <meta name="apple-mobile-web-app-capable" content="yes">

    <title>@ViewBag.Title || Web</title>

    <link href="~/Assets/images/favicon.ico" rel="shortcut icon" type="image/x-icon">

    <!-- Bootstrap -->
    <link href="~/Assets/css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- custom style -->
    <link href="~/Assets/css/ui.css" rel="stylesheet" type="text/css" />

    <!-- Fonticon -->
    <link href="~/Assets/fonts/material-icon/css/round.css" rel="stylesheet" type="text/css" />

    <!-- Sweet alert 2-->
    <link href="~/Assets/plugins/swal2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
</head>
<body style="background-color:#f2f7ff">
    <noscript>
        <h4 style="color:red">To be able to access all of our features, you need a browser that supports JavaScript, and it needs to be enabled.</h4>
    </noscript>

    <!-- Preloader-->
    <div class="preloader" id="preloader">
        <div class="spinner-grow" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <!-- Preloader //end -->
    <header class="section-header fixed-top bg-primary">
        <section class="header-main">
            <div class="container">
                <div class="row gy-3 align-items-center">
                    <div class="col-1">
                        <a href="#" class="navbar-brand">
                            @*@if (Session["userId"] != null)
                                {
                                    <img src="~/Images/Distributor/Profile/@(Session["userId"]).jpg" class="icon avatar-sm" alt="@Session["userId"]" onerror="this.onerror = null; this.src = '~/Assets/images/favicon.ico'">
                                }
                                else
                                {
                                    <img class="logo" height="40" src="~/Assets/images/favicon.ico">
                                }*@
                            <img class="logo" height="40" src="~/Assets/images/favicon.ico">
                        </a>
                    </div>
                    <div class="col-3">
                        <h5 class="title-header text-white">@ViewBag.Title</h5>
                    </div> <!-- col end.// -->
                    <div class="order-lg-last col-8">
                        <div class="float-end">
                            @Html.Action("BottomMenu", "Home")
                            <a href="@Url.Action("Logout","Home")" class="btn btn-primary d-inline-block">
                                <i class="material-icons md-log_out"></i> Logout
                            </a>
                        </div>
                    </div> <!-- col end.// -->
                </div> <!-- row end.// -->
            </div> <!-- container end.// -->
        </section> <!-- header-main end.// -->
    </header>
    <hr />
    <section class="padding-y">
        <div class="container">
            <div class="row">
                <aside class="col-3">
                    <ul class="nav nav-pills flex-column mb-auto">
                        @Html.Action("LeftMenu", "Home")
                        <li> <a class="nav-link border-bottom"  href="@Url.Action("MyProfile","Accounts")"> <i class="material-icons md-account_circle"></i> Profile </a></li>
                        <li> <a class="nav-link border-bottom"  href="@Url.Action("ChangePassword","Accounts")"> <i class="material-icons md-lock"></i> Change Password</a></li>
                    </ul>
                </aside>
                <main class="col-9">
                    @RenderBody()
                </main>
            </div>
        </div>
        <br>
    </section> <!-- app-content.// -->




    <footer class="section-footer bg-primary footer-dark text-white">
        <div class="container">
            <section class="footer-main padding-y">
                <div class="row">
                    <aside class="col-12 col-sm-12 col-lg-3">
                        <article class="me-lg-4">
                            <img src="~/Assets/images/favicon.ico" class="logo-footer">
                            <p class="mt-3"> © @DateTime.Now.Year - RFL. <br> All rights reserved. </p>
                        </article>
                    </aside>
                    <aside class="col-6 col-sm-4 col-lg-2">
                        <h6 class="title">Links</h6>
                        <ul class="list-menu">
                            <li> <a href="#">Blogs</a></li>
                        </ul>
                    </aside>
                    <aside class="col-6 col-sm-4 col-lg-2">
                        <h6 class="title">Information</h6>
                        <ul class="list-menu">
                            <li> <a href="#"> Help center </a></li>
                        </ul>
                    </aside>
                    <aside class="col-6 col-sm-4  col-lg-2">
                        <h6 class="title">Support</h6>
                        <ul class="list-menu">
                            <li> <a href="#"> Help center </a></li>
                        </ul>
                    </aside>
                    <aside class="col-12 col-sm-12 col-lg-3">
                        <h6 class="title">Newsletter</h6>
                        <p>Stay in touch with latest updates about our products and offers </p>
                    </aside>
                </div> <!-- row.// -->
            </section>  <!-- footer-top.// -->
            <hr class="my-0">
            <section class="footer-bottom d-flex justify-content-lg-between">
                <div>
                    <i class="fab fa-lg fa-cc-visa"></i>
                    <i class="fab fa-lg fa-cc-amex"></i>
                    <i class="fab fa-lg fa-cc-mastercard"></i>
                    <i class="fab fa-lg fa-cc-paypal"></i>
                </div>
                <nav class="dropup">
                    <button class="dropdown-toggle btn text-white d-flex align-items-center py-0" type="button" data-bs-toggle="dropdown">
                        <img src="images/flags/flag-usa.png" class="me-2" height="20">
                        <span>English</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Bangla</a></li>
                    </ul>
                </nav>

            </section>
        </div> <!-- container end.// -->
    </footer>

    <!-- jQuery -->
    <script src="~/Assets/js/jquery-3.5.0.min.js" type="text/javascript"></script>

    <!-- Bootstrap 5 JS -->
    <script src="~/Assets/js/bootstrap.bundle.js" type="text/javascript"></script>

    <!-- custom javascript -->
    <script src="~/Assets/js/script.js" type="text/javascript"></script>

    <!-- Sweet alert 2-->
    <script src="~/Assets/plugins/swal2/sweetalert2.min.js" type="text/javascript"></script>

    <!-- PWA -->
    @*<script src="js/pwa.js"></script>*@


    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {
            var url = window.location;
            $('nav.nav-bottom a').filter(function () {
                return this.href == url;
            }).addClass('active');
            $('nav.nav-sidebar a').filter(function () {
                return this.href == url;
            }).addClass('bg-gradient-blue');
        });

        @Html.Raw(TempData["mesg"])
    </script>
    <script>
        $('.minus').click(function () {
            quantityField = $(this).next();
            if (quantityField.val() != 1) {
                quantityField.val(parseInt(quantityField.val(), 10) - 1);
            }
        });
        $('.plus').click(function () {
            quantityField = $(this).prev();
            quantityField.val(parseInt(quantityField.val(), 10) + 1);
        });
        $('.quantity').on("keyup change", function () {
            var qty = $(this).val();
            if (qty == '' || qty == '0') {
                $(this).val('1');
            };
        });
    </script>
</body>
</html>