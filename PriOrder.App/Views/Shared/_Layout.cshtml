<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no, shrink-to-fit=no">

    <meta name="description" content="Primary Order Collection">
    <meta name="keywords" content="Primary Order, Primary, Order">
    <meta name=”theme-color” content=”#0d6efd>
    <meta name="apple-mobile-web-app-capable" content="yes">

    <title>@ViewBag.Title || PriOrder</title>

    <link href="~/Assets/images/favicon.ico" rel="shortcut icon" type="image/x-icon">

    <!-- Bootstrap -->
    <link href="~/Assets/css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- custom style -->
    <link href="~/Assets/css/ui.css" rel="stylesheet" type="text/css" />

    <!-- Fonticon -->
    <link href="~/Assets/fonts/material-icon/css/round.css" rel="stylesheet" type="text/css" />

    <!-- Sweet alert 2-->
    <link href="~/Assets/plugins/swal2/sweetalert2.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <noscript>
        <h4 style="color:red">To be able to access all of our features, you need a browser that supports JavaScript, and it needs to be enabled.</h4>
    </noscript>

    <!-- Preloader-->
    <div class="preloader" id="preloader">
        <div class="spinner-grow" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <!-- Preloader //end -->


    <header class="app-header ondark fixed-top bg-primary">

        <a href="#offcanvas_left_123" data-bs-toggle="offcanvas" role="button" class="btn-header">
            <i class="material-icons md-menu"></i>
        </a>

        <h5 class="title-header">@ViewBag.Title</h5>

        <a href="@Url.Action("Logout","Home")" class="btn-header">
            <i class="material-icons md-log_out"></i>
        </a>

    </header> <!-- app-header.// -->

    <main class="app-content">
        <section class="p-3">
            @RenderBody()
        </section>
        <br>
    </main> <!-- app-content.// -->

    <nav class="nav-bottom">
        @Html.Action("BottomMenu", "Home")
    </nav> <!-- nav-bottom -->


    <aside class="offcanvas offcanvas-start" tabindex="-1" id="offcanvas_left_123">
        <header class="p-3 border-bottom bg-light">
            <button type="button" class="float-end btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            <a href="@Url.Action("MyProfile","Accounts")" class="icontext">
                @if (Session["userId"] != null)
                {
                    <img src="~/Images/Distributor/Profile/@Session["userId"]-.jpg" class="icon avatar-sm" alt="@Session["userId"]">
                    <div class="text">
                        <h6 class="mb-0">@Session["userId"]</h6>
                        <small>View profile</small>
                    </div>
                }
            </a>
        </header>
        <article class="offcanvas-body">
            <nav class="nav-sidebar mt-2">
                @Html.Action("LeftMenu", "Home")

                @*<a href="@Url.Action("Products")"> <i class="material-icons md-local_offer"></i> Products</a>
                    <a href="@Url.Action("MyOrders")"> <i class="material-icons md-local_shipping"></i> My Orders</a>
                    <a href="@Url.Action("Damages")"> <i class="material-icons md-store"></i> Damages </a>
                    <hr>
                    <a href="@Url.Action("Messages")"> <i class="material-icons md-chat"></i> Messages</a>
                    <a href="@Url.Action("Support")"> <i class="material-icons md-question_answer"></i>Help &amp; Support</a>
                    <a href="#3"> <i class="material-icons md-info"></i> About us</a>
                    <hr>*@
                <a href="@Url.Action("MyProfile","Accounts")"> <i class="material-icons md-account_circle"></i> Profile </a>
                <a href="@Url.Action("ChangePassword","Accounts")"> <i class="material-icons md-lock"></i> Change Password</a>
                <hr>
                <a href="@Url.Action("Logout","Home")"> <i class="material-icons md-log_out"></i> Logout</a>
            </nav>
        </article> <!-- offcanvas-body .// -->
    </aside> <!-- offcanvas.// -->
    <!-- jQuery -->
    <script src="~/Assets/js/jquery-3.5.0.min.js" type="text/javascript"></script>

    <!-- Bootstrap 5 JS -->
    <script src="~/Assets/js/bootstrap.bundle.js" type="text/javascript"></script>

    <!-- custom javascript -->
    <script src="~/Assets/js/script.js" type="text/javascript"></script>

    <!-- Sweet alert 2-->
    <script src="~/Assets/plugins/swal2/sweetalert2.min.js" type="text/javascript"></script>

    <!-- PWA -->
    @*<script src="js/pwa.js"></script>*@


    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            var url = window.location;
            $('nav.nav-bottom a').filter(function () {
                return this.href == url;
            }).addClass('active');
            $('nav.nav-sidebar a').filter(function () {
                return this.href == url;
            }).addClass('bg-gradient-blue');
        });

        @Html.Raw(TempData["mesg"])
    </script>
    <script>
        $('.minus').click(function () {
            quantityField = $(this).next();
            if (quantityField.val() != 1) {
                quantityField.val(parseInt(quantityField.val(), 10) - 1);
            }
        });
        $('.plus').click(function () {
            quantityField = $(this).prev();
            quantityField.val(parseInt(quantityField.val(), 10) + 1);
        });
        $('.quantity').on("keyup change", function () {
            var qty = $(this).val();
            if (qty == '' || qty == '0') {
                $(this).val('1');
            };
        });
    </script>


    <script>

    </script>
</body>
</html>