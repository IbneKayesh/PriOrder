@model IEnumerable<PriOrder.App.Models.WO_SUP_MSG>
@{
    ViewBag.Title = "Support";
}
<p class="text-center mx-3">
    <a href="@Url.Action("SupportRequest","Messages")" class="btn btn-danger w-100">Need Help? Send your query..</a>
</p>

@foreach (var item in Model)
{
    <article class="card-banner rounded bg-light mb-2">
        <div class="p-3" style="width:95%">
            <span class="float-end badge bg-warning">@item.SUP_NUMBER</span>
            <span class="text-secondery">@item.CREATE_DATE</span>
            <p>
                @item.CTYP_TYPE

                <a href="@Url.Action("SupportReply", "Messages", new { replyId = item.SUP_NUMBER })" class="badge bg-danger">@(item.IS_ACTIVE ? "Reply" : "View Messages")</a>
            </p>
        </div>
    </article>
}