@{
    ViewBag.Title = "My Profile";
}

<section class="p-3 bg-primary">
    <a href="28.page-settings.html" class="float-end"><i class="material-icons md-edit text-white"></i></a>
    <figure class="icontext align-items-center mr-4" style="max-width: 300px;">
        <img class="icon icon-md rounded-circle" src="~/Assets/images/avatars/1.jpg">
        <figcaption class="text text-white">
            @if (Session["userId"] != null)
            {
                <p class="h5 title mb-1">@Session["userId"]</p>
                <p>@Session["userName"]</p>
                <p class="text-white-50 lh-sm">@Session["userGroup"]<br>@Session["userMobile"]</p>
            }
        </figcaption>
    </figure>
</section>

<section class="p-3">
    <ul class="row">
        <li class="col-4">
            <a href="@Url.Action("MyOrders")" class="item-category-grid">
                <span class="icon-wrap"> <i class="icon material-icons md-shopping_basket"></i>  </span>
                <small class="text"> Orders </small>
            </a>
        </li>
        <li class="col-4">
            <a href="@Url.Action("Banks","Accounts")" class="item-category-grid">
                <span class="icon-wrap"> <i class="icon material-icons md-home_work"></i>  </span>
                <small class="text"> Banks</small>
            </a>
        </li>
        <li class="col-4">
            <a href="@Url.Action("MRStatus","Accounts")" class="item-category-grid">
                <span class="icon-wrap"> <i class="icon material-icons md-account_balance_wallet"></i>  </span>
                <small class="text"> MR Status </small>
            </a>
        </li>
    </ul>
</section>

<hr class="divider">

<section>
    <h5 class="title-section pb-2">Orders</h5>
    <nav class="nav-list">
        <a class="btn-list" href="@Url.Action("MyOrders")">
            <span class="float-end badge bg-warning">3</span>
            <span class="text">On proccess</span>
        </a>
        <a class="btn-list" href="@Url.Action("MyOrders")">
            <span class="float-end badge bg-success">1</span>
            <span class="text">Shipped</span>
        </a>
        <a class="btn-list" href="@Url.Action("MyOrders")">
            <span class="float-end badge bg-secondary">0</span>
            <small class="title"></small>
            <span class="text">Undelivered</span>
        </a>
    </nav>
</section>
<hr class="divider">
<section>
    <h5 class="title-section pb-2">Account</h5>
    <nav class="nav-list">
        <a class="btn-list" href="@Url.Action("Messages")">
            <i class="icon-control material-icons md-keyboard_arrow_right"></i>
            <span class="text">Messages</span>
        </a>
        <a class="btn-list" href="@Url.Action("Support")">
            <i class="icon-control material-icons md-keyboard_arrow_right"></i>
            <span class="text">Support</span>
        </a>
        <a class="btn-list" href="@Url.Action("ChangePassword")">
            <i class="icon-control material-icons md-keyboard_arrow_right"></i>
            <span class="text">Change Password</span>
        </a>
    </nav>
</section>

<hr class="divider">
<section>
    <h5 class="title-section pb-2">Personal</h5>
    <nav class="nav-list">
        <a class="btn-list" href="29.page-profile-edit.html">
            <i class="icon-control material-icons md-edit"></i>
            <small class="title">Username</small>
            <span class="text">vosidiy</span>
        </a>
        <a class="btn-list" href="29.page-profile-edit.html">
            <i class="icon-control material-icons md-edit"></i>
            <small class="title">Email</small>
            <span class="text">myname@gmail.com</span>
        </a>
    </nav>
</section>