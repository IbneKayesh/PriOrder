@model PriOrder.App.Models.T_DSMA
@{
    ViewBag.Title = "My Profile";
}

<section class="p-3 bg-primary">
    <a href="@Url.Action("ChangeProfilePicture","Accounts")" class="float-end"><i class="material-icons md-edit text-white"></i></a>
    <figure class="icontext align-items-center mr-4" style="max-width: 300px;">
        @if (Session["userId"] != null)
            {
            <img class="icon icon-md rounded-circle" src="~/Images/Distributor/Profile/@(Session["userId"]).jpg" alt="@Session["userId"]">
            <figcaption class="text text-white">
                <p class="h5 title mb-1">@Session["userId"]</p>
                <p>@Session["userName"]</p>
                <p class="text-white-50 lh-sm">MR: @Model.T_DSMA_BAL.MRDO_AMNT, Balance: @Model.T_DSMA_BAL.DBAL_ABAL, Credit: @Model.T_DSMA_BAL.DBAL_CBAL</p>
            </figcaption>
            }
    </figure>
</section>

<section class="p-3">
    <ul class="row">
        <li class="col-4">
            <a href="@Url.Action("MyOrders")" class="item-category-grid">
                <span class="icon-wrap"> <i class="icon material-icons md-shopping_basket"></i>  </span>
                <small class="text"> Orders </small>
            </a>
        </li>
        <li class="col-4">
            <a href="@Url.Action("Banks","Accounts")" class="item-category-grid">
                <span class="icon-wrap"> <i class="icon material-icons md-home_work"></i>  </span>
                <small class="text"> Banks</small>
            </a>
        </li>
        <li class="col-4">
            <a href="@Url.Action("MRStatus","Accounts")" class="item-category-grid">
                <span class="icon-wrap"> <i class="icon material-icons md-account_balance_wallet"></i>  </span>
                <small class="text"> MR Status </small>
            </a>
        </li>
    </ul>
</section>

<hr class="divider">

<section>
    <h5 class="title-section pb-2">Account</h5>
    <nav class="nav-list">
        <div class="btn-list">
            <span class="float-end badge bg-danger">@(String.IsNullOrEmpty(Model.APPL_NID) ? "Update your Master NID, Contact with Help Line" : Model.APPL_NID)</span>
            <span class="text">Master ID</span>
        </div>
        <div class="btn-list">
            <span class="float-end badge bg-warning">@(String.IsNullOrEmpty(Model.DSTO_NIDN) ? "Update your NID, Contact with Help Line" : Model.DSTO_NIDN)</span>
            <span class="text">NID</span>
        </div>
        <div class="btn-list">
            <span class="float-end badge bg-success">@Model.DIST_TYPE</span>
            <span class="text">Type</span>
        </div>
        <div class="btn-list">
            <span class="float-end badge bg-warning">@Model.DIST_CLASS_NAME</span>
            <span class="text">Class</span>
        </div>
        <div class="btn-list">
            <span class="float-end badge bg-secondary">@Model.DSMA_DSID</span>
            <span class="text">Code</span>
        </div>
        <div class="btn-list">
            <span class="float-end badge bg-warning">@Model.DSMA_NAME</span>
            <span class="text">Name</span>
        </div>
        <div class="btn-list">
            <span class="float-end badge bg-success">@Model.ADDR1</span>
            <span class="text">Owner</span>
        </div>
        <div class="btn-list">
            <span class="float-end badge bg-secondary">@Model.CONTACTS</span>
            <span class="text">Mobile</span>
        </div>
        <div class="btn-list">
            <span class="float-end badge bg-warning">@Model.ADDR2</span>
            <span class="text">Address</span>
        </div>
        <div class="btn-list">
            <span class="float-end badge bg-success">@Model.DIGR_NAME</span>
            <span class="text">Group</span>
        </div>
        <div class="btn-list">
            <span class="float-end badge bg-secondary">@Model.SALES_ZONE</span>
            <span class="text">Zone</span>
        </div>
        <div class="btn-list">
            <span class="float-end badge bg-success">@Model.DIST_ZONE</span>
            <span class="text">Base</span>
        </div>
        <div class="btn-list">
		<a class="float-end badge bg-secondary" href="tel:@Model.ZCONTACTS">@Model.ZCONTACTS</a>
            <span class="text">Help Line</span>
        </div>
    </nav>
</section>
<hr class="divider">
<section>
    <h5 class="title-section pb-2">Business</h5>
    <nav class="nav-list">
        <a class="btn-list" href="@Url.Action("MyDistributors","Accounts")">
            <i class="icon-control material-icons md-keyboard_arrow_right"></i>
            <span class="text">My Distributors</span>
        </a>
        <a class="btn-list" href="@Url.Action("ChangePassword")">
            <i class="icon-control material-icons md-keyboard_arrow_right"></i>
            <span class="text">Change Password</span>
        </a>
    </nav>
</section>

<hr class="divider">
<section>
    <h5 class="title-section pb-2">Personal</h5>
    <nav class="nav-list">
        <a class="btn-list" href="@Url.Action("ChangeProfilePicture","Accounts")">
            <i class="icon-control material-icons md-edit"></i>
            <small class="title">Profile Picture</small>
            <span class="text">Change</span>
        </a>
    </nav>
</section>