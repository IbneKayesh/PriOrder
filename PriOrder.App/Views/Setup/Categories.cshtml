@model IEnumerable<PriOrder.App.Models.WO_ITEM_CATEGORY>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section>
    <div class="p-3">
        <ul class="row">
            @foreach (var item in Model)
            {
                <li class="col-12 col-sm-12 col-md-6">
                    <article class="product-list mb-2">
                        <div>
                            <a href="@Url.Action("Category","Setup", new { id = item.CATEGORY_ID })" class="img-wrap"> <img src="~/Images/Category/@item.CATEGORY_ID-.jpg"> </a>
                        </div>
                        <div class="info-wrap">
                            <p class="title"> @item.CATEGORY_NAME </p>
                            <div class="price mb-2">@item.ITEM_CLASS_COUNT Class [@item.ITEM_COUNT items] </div>
                            <div>
                                <a href="@Url.Action("Category","Setup", new { id = item.CATEGORY_ID })" class="btn btn-sm btn-light"> Change Picture  </a>
                                <a href="@Url.Action("ProductClass","Setup", new { id = item.CATEGORY_ID })" class="btn btn-icon btn-sm btn-light">
                                    <i class="material-icons md-list_alt"></i>
                                </a>
                            </div>
                        </div>
                    </article>
                </li> <!-- col.// -->
            }
        </ul> <!-- row.// -->
    </div>
</section>