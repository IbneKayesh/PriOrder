@model IEnumerable<PriOrder.App.Models.WO_ITEM_CLASS>
@{
    ViewBag.Title = "Classes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="text-center mx-3">
    <a href="@Url.Action("Categories","Setup")" class="btn w-100 btn-light">
        <i class="material-icons md-arrow_back"></i>
        Categories
    </a>
</p>
<section>
    <div class="p-3">
        <ul class="row">
            @foreach (var item in Model)
            {
                <li class="col-12 col-sm-12 col-md-6">
                    <article class="product-list mb-2">
                        <div>
                            <a href="@Url.Action("Class","Setup", new { id = item.ITEM_CLASS_ID })" class="img-wrap"> <img src="~/Images/ItemClass/@item.ITEM_CLASS_ID-.jpg"> </a>
                        </div>
                        <div class="info-wrap">
                            <p class="title"> @item.ITEM_CLASS_NAME </p>
                            <div class="price mb-2">@item.ITEMS_COUNT items</div>
                            <div>
                                <a href="@Url.Action("Class","Setup", new { id = item.ITEM_CLASS_ID })" class="btn btn-sm btn-light"> Change Picture  </a>
                                <a href="@Url.Action("Products","Setup", new { id = item.ITEM_CLASS_ID })" class="btn btn-icon btn-sm btn-light">
                                    <i class="material-icons md-list_alt"></i>
                                </a>
                            </div>
                        </div>
                    </article>
                </li> <!-- col.// -->
            }
        </ul> <!-- row.// -->
    </div>
</section>

<p class="text-center mx-3">
    <a href="@Url.Action("Categories","Setup")" class="btn w-100 btn-light">
        <i class="material-icons md-arrow_back"></i>
        Categories
    </a>
</p>