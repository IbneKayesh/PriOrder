@{
    ViewBag.Title = "Favorite Products";
}


<section>
    <div class="p-3">
        <ul class="row">

            <li class="col-12 col-sm-12 col-md-6">
                <article class="product-list mb-2">
                    <a href="#" class="img-wrap">
                        <img src="~/Assets/images/items/1.jpg">
                    </a>
                    <div class="info-wrap">
                        <a href="#" class="float-end">
                            <i class="material-icons md-favorite"></i>
                        </a>
                        <p class="title"> Product name </p>
                        <div class="price">$99.50 </div>
                        <div class="rating-wrap">
                            <div class="input-group input-group-sm input-spinner">
                                <button class="btn btn-light" type="button"> <i class="material-icons md-minus"></i> </button>
                                <input type="text" class="form-control" value="1">
                                <button class="btn btn-light" type="button"> <i class="material-icons md-plus"></i> </button>
                                <button class="btn btn-light" type="button"> <i class="material-icons md-shopping_cart"></i> </button>
                            </div>
                        </div> <!-- rating-wrap end// -->
                    </div>
                </article> <!-- product-list end// -->
            </li>
        </ul> <!-- row.// -->
    </div>
</section>

<p class="text-center mx-3">
    <a href="@Url.Action("Categories")" class="btn w-100 btn-light">
        <i class="material-icons md-arrow_back"></i>
        More Products
    </a>
</p>