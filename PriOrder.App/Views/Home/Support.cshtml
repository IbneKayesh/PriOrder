@model IEnumerable<PriOrder.App.Models.SUPPORT_MESSAGES>
@{
    ViewBag.Title = "Help and Support";
}

@foreach (var item in Model)
{
    if (item.REPLIED_BY == "C")
    {
        <article class="card-banner rounded bg-info text-white mb-2" style="text-align:left">
            <div class="p-3" style="width:95%">
                <small>@item.MESSAGES_DATE_TIME</small>
                <p>@item.MESSAGES_BODY</p>
            </div>
        </article>
    }
    else
    {
        <article class="card-banner rounded bg-primary text-white mb-2" style="text-align:right">
            <div class="p-3" style="width:95%">
                <small>@item.MESSAGES_DATE_TIME</small>
                <p>@item.MESSAGES_BODY</p>
            </div>
        </article>
    }
}

<p class="alert alert-danger"> Write your problem is here!</p>
<div class="mb-3 row">
    <div class="col-10">
        <textarea class="form-control" placeholder="Messages"></textarea>
    </div>
    <div class="col-2">
        <br />
        <button type="submit" class="btn w-100 btn-primary"><i class="material-icons md-send"></i></button>
    </div>
</div>