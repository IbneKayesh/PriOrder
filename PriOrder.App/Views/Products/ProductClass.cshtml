@model  PriOrder.App.ModelsView.CLASS_CATEGORY
@{
    ViewBag.Title = "Product Class";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="pb-3 pt-1 bg-primary">
    <h5 class="title-lg text-white">Categories</h5>
    <div class="px-3 scroll-horizontal">
        @if (Model.CATEGORIES != null)
        {
            foreach (var item in Model.CATEGORIES)
            {
                <div class="item-xs">
                    <a href="@Url.Action("ProductClass", "Products", new { id = item.CATEGORY_ID })" class="item-category-sm">
                        <div class="icon-wrap bg-primary-light shadow-sm">
                            <img class="icon" src="~/Images/Category/@item.CATEGORY_ID-.jpg" alt="">
                        </div>
                        <small class="title text-white"> @item.CATEGORY_NAME </small>
                    </a>
                </div>
            }
        }
        else
        {
            <p class="title-sm text-white">No Category found</p>
        }
    </div> <!-- scroll-horizontal.// -->
</section>

<section>
    <ul class="p-3 list-menu">
        @if (Model.CLASS != null)
        {
            foreach (var item in Model.CLASS)
            {
                <li class="nav-item">
                    <a href="@Url.Action("Products", "Products", new { id = item.ITEM_CLASS_ID })" class="icontext">
                        <span class="icon icon-sm rounded"> <img src="~/Images/ItemClass/@item.ITEM_CLASS_ID-.jpg" alt=""> </span>
                        <div class="text"> <h6 class="title">@item.ITEM_CLASS_NAME</h6> <span class="text-muted">@item.ITEMS_COUNT items</span></div>
                    </a>
                </li>
            }
        }
        else
        {
            <li class="nav-item">
                <p class="text">No Product Class found</p>
            </li>
        }
    </ul>
</section>