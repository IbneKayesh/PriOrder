@section scripts{
    <script>
        function getThanaList() {
            var url = 'DropDownFor_Thana';
            var DISTRICT = $('#DISTRICT').val();
            var POLICE_STATION = $('#POLICE_STATION');
            POLICE_STATION.empty();
            POLICE_STATION.append($("<option></option>").attr("value", '').text('--Select--'));
            $.getJSON(url, { district: DISTRICT }, function (response) {
                $.each(response, function (index, item) {
                    POLICE_STATION.append($("<option></option>").attr("value", item.Value).text(item.Text));
                });
            });
        };
        function getUnionList() {
            var url = 'DropDownFor_Union';
            var POLICE_STATION = $('#POLICE_STATION').val();
            var UNION_NAME = $('#UNION_NAME');
